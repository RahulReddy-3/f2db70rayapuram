extends layout
block content
 h1= title
 if (toShow == null)
  h2 No instance to update
 else
  - let vacuumcleanerid = toShow._id
  - let vacuumcleanerProductID = toShow.vacuumcleanerProductID
  - let vacuumcleanerDateOfManufacturing = toShow.vacuumcleanerDateOfManufacturing
  - let vacuumcleanerWarrantyinYears = toShow.vacuumcleanerWarrantyinYears
 
   div.row(class='mb-2')
    div.mr-1 ID is
    div #{vacuumcleanerid}
  - let actionid = "/resource/vacuumcleaner/" + vacuumcleanerid
  form(id='VacuumCleanerForm', action= actionid, method="PUT")
   div.form-group
    label.vacuumcleanerAttr(for='vacuumcleanerProductID') vacuumcleaner ProductID
    input#vacuumcleanerProductID(type='number', name='vacuumcleanerProductID', value= vacuumcleanerProductID )
   div.form-group
    label.vacuumcleanerAttr(for='vacuumcleanerDateOfManufacturing') vacuumcleaner DateOfManufacturing
    input#vacuumcleanerDateOfManufacturing(type='text', name='vacuumcleanerDateOfManufacturing', value= vacuumcleanerDateOfManufacturing )
   div.form-group
    label.vacuumcleanerAttr(for='vacuumcleanerWarrantyinYears') vacuumcleaner WarrantyinYears
    input#vacuumcleanerWarrantyinYears(type='number', name='vacuumcleanerWarrantyinYears', value= vacuumcleanerWarrantyinYears )
   input(type="submit")
  script.
   document.forms['VacuumCleanerForm'].addEventListener('submit', (event) => {
    event.preventDefault();
    // TODO do something here to show user that form is being submitted
    fetch(event.target.action, {
     method: 'PUT',
     body: new URLSearchParams(new FormData(event.target)) // event.target is the form
    }).then((resp) => {
     return resp.json(); // or resp.text() or whatever the server sends
    }).then((body) => {
     alert("Update succeded")
    // TODO handle body
    }).catch((error) => {
    // TODO handle error
     alert("Update failed " + error )
    });
   });